{% extends "base.jinja2" %}

{% block main_content %}
  <h3>Introduction</h3>
<p class="text-muted">Welcome to <b>Thor Server</b>, the interactive server component of the Thor Bayesian optimization library!</p>
<hr class="featurette-divider">
{% if current_user.is_authenticated %}
  {% for experiment in current_user.experiments %}
    <h4><a href="{{ url_for("experiment.page", name=experiment.name) }}">{{ experiment.name }}</a></h4>
<p>
  {{ experiment.date.strftime('%Y-%m-%d') }} | Observations {{ experiment.observations.count() }}{% if experiment.maximal_observation %} | Metric {{ experiment.maximal_observation.y|round(4) }}{% endif %}
</p>
  {% endfor %}
{% endif %}
{% endblock %}
