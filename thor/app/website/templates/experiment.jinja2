{% extends "base.jinja2" %}

{% block styles %}
  {{ super() }}
  {{ css_resources|indent(4)|safe }}
{% endblock %}

{% block scripts %}
  {{ super() }}
  {{ js_resources|indent(4)|safe }}
  {{ plot_script|indent(4)|safe }}
{% endblock %}

{% block main_content %}
  <div class="row">
    <div class="col-md-9">
      <h3>{{ experiment.name }}</h3>
    </div>
    <div class="col-md-1 delete-btn">
      <form method="post" action="{{ url_for("api.delete_experiment", experiment_id=experiment.id) }}">
        <button class="btn btn-danger" type="submit">Delete Experiment</button>
      </form>
    </div>
  </div>
  <hr class="featurette-divider">

  <ul class="nav nav-tabs">
    <li {% if tab == "overview" %}class="active disabled"{% endif %}><a href="{{ url_for("experiment.overview_page", name=experiment.name) }}">Overview</a></li>
    <li {% if tab == "analysis" %}class="active disabled"{% endif %}><a href="{{ url_for("experiment.analysis_page", name=experiment.name) }}">Analysis</a></li>
  </ul>

  {% if tab == "overview" %}
    {% include "experiment/overview.jinja2" %}
  {% elif tab == "analysis" %}
    {% include "experiment/analysis.jinja2" %}
  {% endif %}
{% endblock %}
